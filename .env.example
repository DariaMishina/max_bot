# ============================================================
# Max-бот «Гадание AI» — переменные окружения
# Скопируйте в .env и заполните значения
# ============================================================

# --- Обязательные ---

# Токен бота Max (получить у @MasterBot в Max: https://max.ru/masterbot)
BOT_TOKEN=your_max_bot_token_here

# OpenAI API Key (для толкования гаданий через ChatGPT)
API_KEY=sk-proj-xxx

# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=max_bot_db
DB_USER=max_bot_user
DB_PASSWORD=your_password

# --- Опциональные ---

# ЮKassa (без них бот работает, но оплата недоступна)
YOOKASSA_SHOP_ID=
YOOKASSA_SECRET_KEY=

# Куда пересылать обратную связь (/feedback) — user_id админа в Max
ADMIN_CHAT_ID=

# Яндекс Метрика Measurement Protocol (для кампании Директ → бот напрямую)
# Счётчик: создать на https://metrika.yandex.ru, указать сайт max.ru
# Токен: получить в настройках счётчика
METRIKA_MP_COUNTER_ID=
METRIKA_MP_TOKEN=

# --- Тестовый режим ---

# TEST_MODE=true — используется BOT_TOKEN_TEST, суффикс _test для таблиц БД
# TEST_MODE=false (по умолчанию)
TEST_MODE=false
BOT_TOKEN_TEST=
